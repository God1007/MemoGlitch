<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 标题栏 -->
    <LinearLayout
        android:id="@+id/settingsHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#F0F2F5"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Setting"
            android:textSize="18sp"
            android:textColor="#1E3A8A"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 设置项容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/settingsHeader"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 文字大小调整 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Font Size"
                android:textSize="16sp"
                android:textColor="#1F2937" />

            <SeekBar
                android:id="@+id/textSizeSeekBar"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:max="100"
                android:progress="50" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginVertical="8dp" />

        <!-- 振动开关 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable haptic feedback"
                android:textSize="16sp"
                android:textColor="#1F2937" />

            <ToggleButton
                android:id="@+id/vibrationToggle"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginVertical="8dp" />

        <!-- 重置进度 -->
        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="Reset the process of story"
            android:textColor="#FFFFFF"
            android:background="@drawable/reset_button_bg"
            android:textSize="14sp" />

        <!-- 关于应用 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About App"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#6B7280" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identity Glitch v1.0\nThe experience of psychology"
                android:textSize="12sp"
                android:textColor="#9CA3AF"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>